<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/brown">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="@drawable/rounded_background"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dragon_hunter"
                android:gravity="center"
                android:text="@string/title_activity_location_services"
                android:textAlignment="center"
                android:textColor="@color/off_white"
                android:textSize="20sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/location"
                style="@style/TextViewStyle"
                android:text="@string/location_info" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="68dp">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="@color/dark_blue_custom"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@color/dark_blue_custom"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView"
                        android:background="@color/dark_blue_custom"
                        style="@style/TextViewStyle"
                        android:layout_marginBottom="10dp"
                        android:text="@string/restaurants_text"
                        android:textColor="@color/off_white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/restaurantBtn"
                        android:fontFamily="@font/dragon_hunter"
                        android:backgroundTint="@color/brown"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/restaurants_button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="@color/dark_blue_custom"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        style="@style/TextViewStyle"
                        android:layout_marginBottom="10dp"
                        android:text="@string/tourist_text"
                        android:textColor="@color/off_white"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/tourismBtn"
                        android:backgroundTint="@color/brown"
                        style="@style/ButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/tourist_button" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@color/light_gold"
        app:itemIconTint="@color/off_white"
        app:itemTextColor="@color/off_white"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
